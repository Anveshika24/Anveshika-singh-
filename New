}const ebooks = [
  { title: "GenZ Side Hustle Guide", link: "https://example.com/hustle.pdf", hot: true },
  { title: "Digital Skills 101", link: "https://example.com/skills.pdf", hot: false },
];

function showTab(tabId) {
  document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
  document.getElementById(tabId).classList.add('active');
  if (tabId === 'all') renderEbooks();
  if (tabId === 'new') renderNewEbooks();
}

function renderEbooks() {
  const list = document.getElementById('ebook-list');
  list.innerHTML = '';
  ebooks.forEach(ebook => {
    list.innerHTML += `<div class="ebook-card">
      <strong>${ebook.title}</strong><br/>
      <a href="${ebook.link}" target="_blank">üìñ Read / Download PDF</a>
    </div>`;
  });
}

function renderNewEbooks() {
  const list = document.getElementById('new-ebooks');
  list.innerHTML = '';
  ebooks.filter(e => e.hot).forEach(ebook => {
    list.innerHTML += `<div class="ebook-card">
      <strong>${ebook.title}</strong><br/>
      <a href="${ebook.link}" target="_blank">üî• Read / Download PDF</a>
    </div>`;
  });
}

function searchEbooks(query) {
  const results = document.getElementById('search-results');
  results.innerHTML = '';
  ebooks.filter(e => e.title.toLowerCase().includes(query.toLowerCase()))
    .forEach(ebook => {
      results.innerHTML += `<div class="ebook-card">
        <strong>${ebook.title}</strong><br/>
        <a href="${ebook.link}" target="_blank">üîç Read / Download PDF</a>
      </div>`;
    });
}

function uploadEbook() {
  const title = document.getElementById('ebookTitle').value;
  const link = document.getElementById('ebookLink').value;
  if (title && link) {
    ebooks.push({ title, link, hot: true });
    alert("eBook uploaded successfully!");
    document.getElementById('ebookTitle').value = '';
    document.getElementById('ebookLink').value = '';
  } else {
    alert("Please enter both title and PDF link.");
  }
}
